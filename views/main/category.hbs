<div class="container" style="margin-top:40px;">
    <div class="row">
        {{#if products}}
        {{#each products}}
        <div class="col-md-4">
            <a href="/product/{{this._id}}">
                <div class="thumbnail">
                    <img src="{{this.image}}" class="img-fluid" alt="">
                    <div class="caption">
                        <h3>{{this.name}}</h3>
                        <p>{{this.category.name}}</p>
                        <p>{{this.price}}</p>
                    </div>
                </div>
            </a>
        </div>
        {{/each}}
        {{else}}
        <p>No Product Available</p>
        {{/if}}
    </div>
</div>