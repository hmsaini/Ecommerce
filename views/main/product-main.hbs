<div class="jumbotron" id="navbar-gap">
    <h1 class="text-center">Find your favorite product</h1>
    <p class="text-center">Search many of Ecommerce products</p>

    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6 col-md-offset-3">
            <div class="input-group col-md-12">
                <input type="text" id="search" placeholder="Search for a Product" class="form-control input-lg"
                    name="search_term">
                <span class="input-group-btn">
                    <button type="submit" class="btn btn-primary">Search</button>
                </span>
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>

<div class="container" style="margin-top: 40px;">
    <div class="row" id="searchResults">
        {{#if products}}
        {{#each products}}
        <div class="col-md-4">
            <a href="/product/{{this._id}}">
                <div class="thumbnail">
                    <img src="{{this.image}}" class="img-fluid" alt="">
                    <div class="caption">
                        <h3>{{this.name}}</h3>
                        <p>{{this.category.name}}</p>
                        <p>{{this.price}}</p>
                    </div>
                </div>
            </a>
        </div>
        {{/each}}
        {{else}}
        <p>No Product</p>
        {{/if}}

