<div class="container" style="margin-top:40px;">
    <div class="row">
        <div class="col-md-6">
            <img src="{{user.profile.picture}}" class="img-circle img-responsive img-center" alt="">
            <br>
            <br>
            <p>Name: {{user.profile.name}}</p>
            <p>Email: {{user.email}}</p>
            {{#if user.address}}
            <p>Address: {{user.address}}</p>
            {{else}}
            <p>Address: You have no address</p>
            {{/if}}

            <a href="/users/edit-profile" class="btn btn-primary">Edit Profile</a>
        </div>

        <div class="col-md-6">
            <h2 class="text-center">History</h2>

            <table class="table table-striped sticky-header">
                <thead>
                    <tr>
                        <th>Item's Name</th>
                        <th>Paid:</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each record}}
                    <tr>
                        <td>{{this.item.name}}</td>
                        <td>{{this.paid}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>